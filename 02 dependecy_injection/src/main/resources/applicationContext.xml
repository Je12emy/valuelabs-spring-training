<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"></bean>
    <!-- bean creation -->
    <bean id="accdao" class="di.AccountDaoImp" autowire="no" scope="singleton" lazy-init="default">
        <property name="dataSource">
            <!-- Setter based bean creation, we reference another bean which we created -->
            <ref bean="dataSource" />
        </property>
    </bean>
</beans>